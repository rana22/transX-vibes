{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./build/",
      "lib": ["es6", "dom"],
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "skipLibCheck": true,
      
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }